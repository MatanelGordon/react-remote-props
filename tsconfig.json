{
	"compilerOptions": {
		"module": "ES6",
		"target": "ESNext",
		"lib": ["esnext", "dom"],
		"declaration": true,
		"jsx": "react-jsx",
		"sourceMap": true,
		"strict": true,
		"outDir": "dist",
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true
	},
	"include": ["index.tsx"],
	"exclude": ["node_modules"]
}
